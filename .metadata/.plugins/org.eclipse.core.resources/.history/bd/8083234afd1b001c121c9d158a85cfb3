package questao.quatro;

import java.util.ArrayList;
import java.util.Scanner;

public class QuestaoQuatro {
	
	public static void main(String[] args) {
		
		int i;
		float maior=0, res, soma=0;
		String maiorn = null;
		float[] altura = null;
		String[] nomes = null;
		
		altura = new float[12];
		nomes = new String[12];
		
		System.out.println("Digite os seguintes dados de 12 jogadores de basquete:");
		System.out.println("Nome - Altura");
		
		Scanner teclado = new Scanner(System.in);
		
		for(i=0; i<12; i++) {
			
			System.out.println("Digite o nome do " + (i+1) + "° jogador");
			nomes[i] = teclado.nextLine();
			System.out.println("Digite a altura de " + nomes[i] + " em centímetros");
			altura[i] = teclado.nextInt();
		}
		
		for(i=0; i<12; i++) {
			soma += altura[i];
			if (altura[i]>maior) {
				maior = altura[i];
				maiorn = nomes[i];
			}
		}
		
		System.out.println("O jogador mais alto é " + maiorn);
		
		res = soma/12;
		
		for(i=0; i<12; i++) {
			if (res>altura[i]) {
				System.out.println("O jogador "+nomes[i]+" tem a altura acima da média!");
			}
		}		
	}
}
